page{
  background-color: #f6f9fb
}
.header{
  height: 30px;
  background-color: #58bcbb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  padding: 0 15px;
}
.header_left{
  font-size: 18px
}
.header_center{
  position: relative;
}
.header_center image{
  position: absolute;
  left: 5px;
  top: 50%;
  margin-top: -7.5px;
  width: 15px;
  height: 15px;
}
.header_center input{
  border: 1px solid #fff;
  border-radius: 100px;
  padding-left: 25px;
  font-size: 14px
}

.header_btn{
  width: 20px;
  height: 20px;
}

.banner swiper{
  height: 450rpx
}
.banner swiper image{
  width: 100%;
  height: 100%
}

.main_1{
  display: flex;
  justify-content: space-between;
  align-content: center;
  text-align: center;
  font-size: 14rpx;
  padding: 40rpx 10rpx 10rpx 10rpx;
  background-color: #fff
}
.main_1 navigator{
  width: 20%
}
.main_1 navigator image{
  width: 100rpx;
  height: 110rpx;
  margin: 0 auto
}
.main_1 navigator text{
  display: block;
  font-size: 27rpx;
  color: #777
}


.main_2{
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
  height: 70rpx;
  background-color: #fff
}
.main_2 image{
 width: 27rpx;
 height: 27rpx;
 display: inline-block;
 margin-right: 10rpx
}

.main_2 text{
  font-size: 27rpx;
  color: #333
}

.main_2_bottom{
  width: 100%;
  height: 360rpx;
  padding: 0 10rpx;
}
.main_2_bottom image{
  height: 360rpx;
  width: 100%;
}



.main_3_title{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #58bcbb;
  background-color: #fff;
  height: 80rpx;
  margin: 20rpx 0
}

.main_3_box{
   padding: 0 15rpx;
   background-color: #fff
}
.main_3_box_list{
  padding-top: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee
}
.main_3_box_list_top{
 display: flex;
  justify-content: space-between;
  align-items: center;
}

.main_3_box_list_left{
  width: 130rpx;
  height: 130rpx;
}
.main_3_box_list_left image{
  width: 100%;
  height: 100%
}
.main_3_box_text{
  width: 560rpx;
}
.main_3_box_text_title{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}

.main_3_box_text_center{
  display: flex;
  align-items: center;
  margin: 10rpx 0
}
.main_3_box_text_center view:nth-child(1){
  display: flex;
  justify-content: left;
  align-items: center;
  font-size: 18rpx;
  color: #ffc119
}
.main_3_box_text_center view:nth-child(1) text{
  margin: 0 10rpx;
}
.main_3_box_text_center view:nth-child(1) image{
  width: 15rpx;
  height: 15rpx;
  margin: 0 5rpx
}

.main_3_box_text_center text:nth-child(2){
  font-size: 24rpx;
  color: #999
}
.main_3_box_text_center view:nth-child(3){
  font-size: 24rpx;
  color: #999;
  display: block;
  margin: 0 0 0 auto
}

.main_3_box_text_bottom{
  align-items: center;
  justify-content: left;
  font-size: 24rpx;
  color: #999
}

.main_3_box_list_bottom{
  border-top: 1rpx dashed #ccc;
  padding: 15rpx 0
}





.page_bottom{
  font-size: 20rpx;
  color: #ccc;
  text-align: center;
  margin: 30rpx 0;
}